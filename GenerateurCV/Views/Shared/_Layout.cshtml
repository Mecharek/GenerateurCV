<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mon application ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-light navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" style="font-size: 20px; font-weight: bold;">
                <ul class="nav navbar-nav"b>
                    <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
                    <li>@Html.ActionLink("Gerer mes CVs", "Index", "CVs")</li>
                    <li>@Html.ActionLink("Mes Infos", "Index", "Users")</li>
                    <li>@Html.ActionLink("Mes formations et diplômes", "Index", "FormationDiplomes")</li>
                    <li>@Html.ActionLink("Mes Expériences", "Index", "Experiences")</li>
                    <li>@Html.ActionLink("Mes loisirs", "Index", "Loisirs")</li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text-center text-lg-start bg-light text-muted">
            <div class="text-center" style="background-color: #ccc; padding: 28px; font-size: 20px;padding:50px">
                © 2021 Copyright:
                <a class="text-reset fw-bold" href="#">generateur-cv.com</a>
            </div>
        <!-- Copyright -->
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
